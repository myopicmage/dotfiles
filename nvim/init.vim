set shell=zsh
" no tabs, only spaces
set tabstop=2
set shiftwidth=2
set expandtab
set smarttab
set autoindent
set smartindent

" line numbers in left gutter
set number

" enable full color support
set termguicolors

" enable 256 colors
let base16colorspace=256

" color scheme
set background=dark
colorscheme base16-onedark

" make backspace work as expected
set backspace=indent,eol,start

" enable mouse support
set mouse=a
